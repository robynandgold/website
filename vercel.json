{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "src/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1.js" },
    { "src": "^/$", "dest": "/src/index.html" },
    { "src": "/(.*)", "dest": "/src/$1" }
  ],
  "functions": {
    "api/webhook.js": {
      "maxDuration": 10
    }
  }
}
