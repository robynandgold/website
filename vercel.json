{
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node@3.0.7",
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/", "destination": "/src/index.html" },
    { "source": "/(.*)", "destination": "/src/$1" }
  ]
}
